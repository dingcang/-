/* pages/list/list.wxss */
page{
  height: 100%;
}
.title{
 height: 81rpx;
 width: 100%;
 background: #fff;
 display: flex;
 box-shadow: 0rpx 5rpx 5rpx #cbcbcb;
 position: absolute;
 top: 0;
 z-index: 101;
}
.title>view{
  flex: 1;
  text-align: center;
  font-size: 22rpx;
  color: #666;
  position: relative;
  width: 180rpx;
  line-height: 81rpx;
}
.title>view::before{
  content: "";
  position: absolute;
  top: 36rpx;
  right: 40rpx;
  border: 8rpx solid;
  border-color: #cbcbcb transparent transparent transparent;
}
.title>view::after{
  content: "";
  position: absolute;
  right: -10rpx;
  top: 26rpx;
  height: 29rpx;
  border-right: 1rpx solid #cbcbcb inset;
}
.title .integrate{
  flex: 1;
}
.title .integrate::before{
  right: 18rpx;
}
.title .more::after{
  border: none;
}
.list-container{
  height: 100%;
  padding-top: 81rpx;
  box-sizing: border-box;
}
.list-item{
  width: 720rpx;
  margin: 0 auto;
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #d6d6d6;
}
.list-item>image{
  width: 263rpx;
}
.item-info{
  flex: 1;
  padding-left: 26rpx;
  box-sizing: border-box;
}
.modal-container{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
}
.modal-mask{
  width: 100%;
  height: 100%;
  opacity: 0.7;
  background: #333;
}
.modal{
  position: absolute;
  top: 81rpx;
  left: 0;
  right: 0;
  background: #f3f3f3;
}
.modal-item{
  border-top: 1rpx solid #e1e1e1;
  background: #fff;
  line-height: 73rpx;
  font-size: 22rpx;
  padding-left: 66rpx;
  width: 100%;
  box-sizing: border-box;
}
.modal-item:nth-child(5){
  border-bottom: 1rpx solid #e1e1e1;
}
.cancel, .confirm{
  display: inline-block;
  width: 127rpx;
  line-height: 58rpx;
  text-align: center;
  font-size: 24rpx;
  margin: 9rpx 0;
  color: #4d8ce7;
  background: #fff;
}
.cancel{
  float: left;
  margin-left: 48rpx;
}
.confirm{
  float: right;
  margin-right: 48rpx;
}
.btn{
  color: #fff;
  background: #3d84e5;
}