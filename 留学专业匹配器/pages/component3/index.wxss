page{
  background: #eee;
}
form{
  padding: 0 30rpx;
  display: block;
  background: #fff;
  position: relative;
}
.container{
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  height: 117rpx;
  align-items:center;
}
.container label{
  width: 190rpx;
  line-height: 117rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  color: #9d9d9d;
}
.container input,.container picker{
  flex: 1;
  font-size: 28rpx;
}
.container button{
  width: 222rpx;
  line-height: 66rpx;
  border: 2px solid transparent;
  background: none;
  font-size: 26rpx;
  color: #9d9d9d;
}
.button-hover{
  color: #2ba0f7!important;
}
.container picker{
  position: relative;
}
.container picker view{
  line-height: 117rpx;
}
.container image{
  width: 17rpx;
  height: 28rpx;
  position: absolute;
  top:0;
  bottom: 0;
  right: 22rpx;
  margin: auto 0;
}
.noBorder{
  border: none;
}
.foot{
  width: 100%;
  position: absolute;
  bottom: -131rpx;
  left: 0;
  right: 0;
}
.foot button{
  margin: 50rpx 60rpx 0;
  line-height: 84rpx;
  color: #fff;
  background: #2ba0f7;
  border-radius: 42rpx;
  font-size: 32rpx;
}
.tip {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: whitesmoke;
  width: 100%;
  height: 40rpx;
  font-size: 35rpx;
  color: red;
}
