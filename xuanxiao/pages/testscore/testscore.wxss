}
.secionMain{
  margin: 0 70rpx;
}
.sectionItemBox{
  width: 33%;
  display: inline-block;
}
.sectionItem{
  border:solid 1px #b1c0e1;
  font-size:30rpx;
  text-align:center;
  margin:5rpx 5rpx;
  border-radius:5rpx;
